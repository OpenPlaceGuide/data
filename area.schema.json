{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openplaceguide.org/place.schema.json",
  "title": "Type",
  "description": "POI Type for OpenPlaceGuide",
  "type": "object",
  "properties": {
    "osm": {
      "type": "object",
      "properties": {
        "id": {
          "description": "OSM Object ID",
          "type": "integer"
        },
        "type": {
          "description": "OSM Object type",
          "type": "string",
          "enum": [
            "node",
            "way",
            "relation"
          ]
        }
      }
    }
  },
  "required": [
    "osm"
  ]
}
